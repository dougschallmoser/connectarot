<h2>Sign Up</h2>

<h5>All fields required.</h5>
<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name, size: "25" %>
  </p>
  <p>
    <%= f.label :email, "Email: " %>
    <%= f.text_field :email, size: "25" %>
  </p>
  <p>
  <%= f.label :password, "Password: " %>
  <%= f.password_field :password, size: "20" %><br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<br>or sign up with <%= link_to "Github", "/auth/github" %>
<br>or sign up with <%= link_to "Facebook", "/auth/facebook" %>