<% title "connecTarot - Login" %>
<h2>Log In</h2>
<br><%= render partial: "application/flash_message" %><br>

<%= form_for :user, method: :post do |f| %>
  <%= f.label :email, "Email: " %>
  <%= f.text_field :email, size: "25" %><p></p>
  <%= f.label :password, "Password: " %>
  <%= f.password_field :password, size: "20" %><p>&nbsp;</p>
  <%= f.submit "Login" %>
<% end %>

<p></p><%= render partial: "omniauth_links", locals: {verb: "Login", text: "login"} %>
