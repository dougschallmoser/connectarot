<h2>Log In</h2>

<%= render partial: "layouts/flash_errors" %>

<%= form_for :user, method: :post do |f| %>
    <p>
      <%= f.label :email, "Email: " %>
      <%= f.text_field :email, size: "25" %>
    </p>
    <p>
      <%= f.label :password, "Password: " %>
      <%= f.password_field :password, size: "20" %>
    </p>
    <p>
      <%= f.submit "Login" %>
    </p>
<% end %>

<br>

or login with <%= link_to "Github", "/auth/github" %>
<br>
or login with <%= link_to "Facebook", "/auth/facebook" %>