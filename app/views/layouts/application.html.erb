<!DOCTYPE html>
<html>
  <head>
    <title>ConnectarotRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav>

    <%= link_to_unless_current "Home", root_path %>  |
    <% if logged_in? %>
      <%= link_to_unless_current "Request Reading", "/request" %>  |
      <%= link_to_unless_current "My Tarot", users_path %>  |
      <%= link_to_unless_current "Logout", logout_path, method: "delete" %>
    <% else %>
      <%= link_to_unless_current "Sign Up", new_user_path %>  |
      <%= link_to_unless_current "Login", login_path %>  |
    <% end %>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
