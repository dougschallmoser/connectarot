<h2>Reading Requests</h2>

<p>
  <span class="error-font"><%= flash[:notice] if flash[:notice] %></span>
</p>

<% if @requests.any? %>
  <% @requests.each do |request| %>
    <table>
      <tr>
        <td>
          <%= request.title %> from <%= request.requestor.name %>
        </td>
        <td>
          <% if request.responder.nil? %>
            <%= button_to "Accept Request", request_path(request), method: "patch" %>
          <% else %>
            <button type="button">Fulfilled</button>
          <% end %>
        </td>
      </tr>
    </table>
  <% end %>
<% else %>
  "There are currently no requests."
<% end %>